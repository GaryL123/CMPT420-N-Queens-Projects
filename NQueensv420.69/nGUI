package nqueens;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class nGUI extends JFrame implements ActionListener {
    private JPanel inputPanel;
    private JLabel inputLabel;
    private JTextField inputField;
    private JButton createBoardButton;
    
    public nGUI() {
        setTitle("NQueens");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setSize(500, 100);
        setLayout(new BorderLayout());
        
        inputPanel = new JPanel();
        inputLabel = new JLabel("Enter N: ");
        inputField = new JTextField(5);
        inputField.addActionListener(this);
        createBoardButton = new JButton("Enter");
        createBoardButton.addActionListener(this);
        
        inputPanel.add(inputLabel);
        inputPanel.add(inputField);
        inputPanel.add(createBoardButton);
        
        add(inputPanel);
        
        setVisible(true);
    }
    
    @Override
    public void actionPerformed(ActionEvent e) {
        if(e.getSource() == createBoardButton) {
            try {
                int n = Integer.parseInt(inputField.getText());
                if(n > 0) {
                    GUI gui = new GUI(n);
                }
                else {
                    JOptionPane.showMessageDialog(null, "Invlaid input.");
                    return;
                }
            }
            catch (NumberFormatException ex) {
                JOptionPane.showMessageDialog(null, "Invalid input.");
                return;
            }
        }
    }
}
